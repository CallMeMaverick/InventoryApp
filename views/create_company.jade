extends layout

block content
    h1= title

    form(method="POST")
        div.form-group
            label(for="name") Company name:
            input(type="text" id="name" name="name")

            label(for="description") Description:
            textarea(id="description" name="description" rows=5 cols=25)

            button.btn(type="submit") Submit



    if err && err.length > 0
        ul
            each error in err
                li --> #{error.msg}