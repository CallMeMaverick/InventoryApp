extends layout

block content
    h1= title

    form(method="POST")
        div.form-group
            label(for="name") Model name:
            input(type="text" placeholder="Iphone 12 Pro Max" id="name" name="name")

            label(for="price") Price:
            input(type="text" placeholder="$1200" id="price" name="price")

            label(for="company") Company:
                select(id="company" name="company")
                    each company in companyList
                        option(value=company.name)= company.name


            label(for="description") Description:
            textarea(id="description" name="description" rows=3 cols=20)

            button.btn(type="submit") Submit

    if (err)
        ul
            each error in err
                li!= error


